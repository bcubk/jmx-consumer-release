#!/bin/bash -e

<%
  rlp_host = link("reverse_log_proxy").instances.first.address
  rlp_port = link("reverse_log_proxy").p('reverse_log_proxy.egress.port')
%>

RUN_DIR=/var/vcap/sys/run/jmx-nozzle
LOG_DIR=/var/vcap/sys/log/jmx-nozzle
PACKAGE_DIR=/var/vcap/packages/jmx-nozzle
PIDFILE=$RUN_DIR/jmx-nozzle.pid
CONFIG_DIR=/var/vcap/jobs/jmx-nozzle/config
JAVA_HOME=/var/vcap/packages/jmx-nozzle/jdk
TMPDIR=/var/vcap/data/jmx-nozzle/tmp

openssl pkcs8 -topk8 -inform PEM -outform PEM -in $CONFIG_DIR/key -out $CONFIG_DIR/key.pkcs8 -nocrypt

case $1 in

start)
mkdir -p $RUN_DIR
mkdir -p $TMPDIR

chown -R vcap:vcap $RUN_DIR
chown -R vcap:vcap $TMPDIR

mkdir -p $LOG_DIR
chown -R vcap:vcap $LOG_DIR

echo $$ > $PIDFILE

hostname=<%= spec.address %>

exec chpst -u vcap:vcap $JAVA_HOME/bin/java \
-Dlog4j.configurationFile=$CONFIG_DIR/log4j2.yml \
-Dconfig.jmx.server.port=<%= p('jmx.server.port') %> \
-Dconfig.jmx.registry.port=<%= p('jmx.registry.port') %> \
-Dconfig.rlp.host=<%= rlp_host %> \
-Dconfig.rlp.port=<%= rlp_port %> \
-Dconfig.nozzle.tls.cert=$CONFIG_DIR/cert \
-Dconfig.nozzle.tls.key=$CONFIG_DIR/key.pkcs8 \
-Dconfig.nozzle.tls.ca_cert=$CONFIG_DIR/ca_cert \
-Dconfig.nozzle.tls.authority=<%= p('tls.authority') %> \
-Dconfig.jmx.tls.key=$CONFIG_DIR/jmx_tls_key \
-Dconfig.jmx.tls.cert=$CONFIG_DIR/jmx_tls_cert \
-Dconfig.metric.prefix=<%= p('metric.prefix') %> \
-Dconfig.auth.password.file=$CONFIG_DIR/password.cfg \
-Dconfig.auth.access.file=$CONFIG_DIR/access.cfg \
-Dio.netty.native.workdir=$TMPDIR \
-Dcom.sun.management.jmxremote.authenticate=false \
-Dcom.sun.management.jmxremote.registry.ssl=false \
-Dcom.sun.management.jmxremote.ssl=false \
-Dcom.sun.management.jmxremote.ssl.need.client.auth=false \
-Djava.rmi.server.hostname=$hostname \
-Dproduct.version=1.0 \
-Dsecurity.org.cloudfoundry.logging.enabled=true \
-jar $PACKAGE_DIR/jmx-nozzle-1.0-SNAPSHOT.jar \
>>$LOG_DIR/jmx-nozzle.stdout.log \
2>>$LOG_DIR/jmx-nozzle.stderr.log

;;

stop)
kill -9 $(cat $PIDFILE)

;;

*)
echo "Usage: jmx-nozzle {start|stop}"

;;

esac
